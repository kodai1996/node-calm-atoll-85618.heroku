            <input type="submit" id="submit">
          </form>
         </div> 
  
          <div class="items">
            <table border="1">
              <tr>
                <th>品名</th>
                <th>在庫の有無</th>
                <th>最終購入日</th>
                <th>削除</th>
                <th>編集</th>
              </tr>
              <% items.forEach((item) => { %>
                <% if(item.aorb == "b"){ %>
                  <tr>
                    <th><%= item.name %></th>
                    <% if(item.stock == "在庫あり"){ %>
